<form>
    <div class="input-group mb-3">
        <input type="text"
               name="q"
               class="form-control"
               placeholder="Найти..."
               value="{{ app.request.query.get('q') }}"
        >
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
        </div>
    </div>

    <div class="input-group mb-3">
        <div class="form-check">
            <input type="checkbox"
                   name="showDeleted"
                   class="form-check-input"
                    {% if app.request.query.has('showDeleted') %} checked {% endif %}
            >
            <label class="form-check-label">Показать удаленные</label>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-3">

        <div class="input-group mb-3">
            <div class="dropdown">
                <button type="submit"
                        class="btn btn-secondary dropdown-toggle"
                        data-toggle="dropdown">
                    Количество элементов
                </button>
                <div class="dropdown-menu">
                    <button class="dropdown-item" type="submit" name="count" value="10">10</button>
                    <button class="dropdown-item" type="submit" name="count" value="20">20</button>
                    <button class="dropdown-item" type="submit" name="count" value="50">50</button>
                </div>
            </div>
        </div>

        {{ knp_pagination_render(pagination) }}

    </div>

</form>